@model WaterCompanySystem.Models.Warehouse
@{
    ViewBag.Title = "DisplayStore";
}


<div class="title-header">
    <h2 class="d-flex justify-content-center "><i class="mx-2 my-auto fa fa-hand-holding-water"></i>DisplayStore - عرض بضاعة المخزن</h2>

</div>
<br />


<fieldset class="card p-4 shadow">
    <legend class="bg-custom shadow  px-3">View</legend>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row my-2">

                <div class="col-md-4">
                    @Html.Label("suplier_type_id - نوع الصنف")
                    <div>
                        @Html.DropDownList("suplier_type_id", ViewBag.suplier_type_id as SelectList, "......... Select ............", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.bottel_type_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    @Html.Label("quantity")
                    <div>
                        @Html.TextBox("quantity", "", new { @class = "form-control", id = "number_of_bottel", name = "bottles" })

                        @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    @Html.Label("StoreQuantity")
                    <div>
                        @Html.TextBox("Storequantity", "", new { @class = "form-control", id = "StoreQuantity", name = "StoreQuantity" })
                   
                    </div>
                </div>
            </div>
            <br />
            <div align="center">

                <input type="submit" value="Create" id="CreateButton" class="btn btn-primary" />

                <a href="/Warehouses/Index" class="btn btn-facebook">Back to List</a>
            </div>
        </div>
    }
</fieldset>
