@model WaterCompanySystem.Models.Delivery

@{
    ViewBag.Title = "Create";
}

<div class="title-header">
    <h2 class="d-flex justify-content-center "><i class="mx-2 my-auto fa fa-hand-holding-water"></i>@WaterCompanySystem.Resourses.Page.Deliveries</h2>
</div>
<br />
<fieldset class="card p-4 shadow">
    <legend class="bg-custom shadow  px-3">@WaterCompanySystem.Resourses.Page.Add</legend>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row my-2">

                <div class="col-md-3">
                    @Html.Label("custmor_id")
                    <div>
                        @Html.DropDownList("custmor_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.custmor_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.delivery_date)
                    <div>
                        @Html.TextBoxFor(model =>model.delivery_date,new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessageFor(model => model.delivery_date, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.num_bottleS_delivered)
                    <div>
                        @Html.EditorFor(model => model.num_bottleS_delivered, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.num_bottleS_delivered, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.del_status)
                    <div>
                        @Html.DropDownList("delivery_status_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.delivery_status_id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-my-2">
                <div class="col-md-3">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.creat_at)
                    <div>
                        @Html.EditorFor(model => model.creat_at, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.creat_at, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.emp_name)
                    <div>
                        @Html.DropDownList("employee_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.employee_id, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <br />
            <div align="center">

                <input type="submit" value="@WaterCompanySystem.Resourses.Page.Create" id="CreateButton" class="btn btn-primary" />

                <a href="/Deliveries/Index" class="btn btn-facebook">@WaterCompanySystem.Resourses.Page.BacktoList</a>
            </div>
        </div>
    }
</fieldset>