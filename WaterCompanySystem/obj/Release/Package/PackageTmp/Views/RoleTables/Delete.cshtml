@model WaterCompanySystem.Models.RoleTable
<div class="title-header">
    <h2 class="d-flex justify-content-center "><i class="mx-2 my-auto fa fa-hand-holding-water"></i>@WaterCompanySystem.Resourses.Page.Roles</h2>
</div>
<br />
<br />
<fieldset class="card p-4 shadow">
    <legend class="bg-custom shadow  px-3">@WaterCompanySystem.Resourses.Page.Delete</legend>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <hr />

    @Html.HiddenFor(model => model.id)
<div class="row my-2">

    <div class="col-md-4">
        @Html.Label(@WaterCompanySystem.Resourses.Page.Roles)

        <div>
            @Html.EditorFor(model => model.role, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.role)
        </div>
    </div>

</div>
    <br />
    <div align="center">

        <input type="submit" value="@WaterCompanySystem.Resourses.Page.Delete" id="CreateButton" class="btn btn-danger" />

        <a href="/RoleTables/Index" class="btn btn-facebook">@WaterCompanySystem.Resourses.Page.BacktoList</a>
    </div>


</div>
    }
</fieldset>