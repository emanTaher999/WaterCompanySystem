
@model WaterCompanySystem.Models.Employee

@{
    ViewBag.Title = "Delete";
}


<div class="title-header">
    <h2 class="d-flex justify-content-center ">
        <i class="mx-2 my-auto fa fa-hand-holding-water"></i>@WaterCompanySystem.Resourses.Page.Employees
    </h2>
</div>
<br />


<fieldset class="card p-4 shadow">
    <legend class="bg-custom shadow  px-4">@WaterCompanySystem.Resourses.Page.Edit</legend>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.hire_date)

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row my-2">

                <div class="col-md-4">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.emp_name)

                    <div>
                        @Html.TextBoxFor(model => model.emp_name, new { @class = "form-control", @id = "emp_name",@readonly="readonly" })
                        @Html.ValidationMessageFor(model => model.emp_name)
                    </div>
                </div>
                <div class="col-md-4">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.Positions)

                    <div>
                        @Html.DropDownListFor(model => model.position_id, null, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.position_id)
                    </div>
                </div>
                <div class="col-md-4">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.salary)

                    <div>
                        @Html.TextBoxFor(model => model.salary, new { @class = "form-control", @id = "salary", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.salary)
                    </div>
                </div>
                @*<div class="col-md-4">
                        @Html.Label(@WaterCompanySystem.Resourses.Page.hire_date)

                        <div>
                            @Html.TextBoxFor(model => model.hire_date, new { @class = "form-control", @type = "date", @id = "hire_date" })
                            @Html.ValidationMessageFor(model => model.hire_date)
                        </div>
                    </div>*@
            </div>
            <br />
            <div class="row my-2">
                <div class="col-md-4">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.vacation_days)
                    <div>
                        @Html.TextBoxFor(model => model.vacation_days, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.vacation_days, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.alwance)
                    <div>
                        @Html.TextBoxFor(model => model.alwance, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.alwance, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    @Html.Label(@WaterCompanySystem.Resourses.Page.username)
                    <div>
                        @Html.DropDownListFor(model => model.userid, ViewBag.userid as SelectList, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.userid, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <br /> <br />
            <div align="center">

                <input type="submit" value="@WaterCompanySystem.Resourses.Page.Delete" id="CreateButton" class="btn btn-danger" />

                <a href="/Employees/Index" class="btn btn-facebook">@WaterCompanySystem.Resourses.Page.BacktoList</a>
            </div>
        </div>
    }
</fieldset>